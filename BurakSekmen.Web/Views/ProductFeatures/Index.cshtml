
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_admin.cshtml";
}

<div class="row mb-3">
    <div class="col-md-4">
        <button id="addBtn" class="btn btn-dark">Yeni Product Özellik Ekle</button>
    </div>

</div>

<div class="row">
    <table class="table table-dark" width="100%">
        <tr>
            <th>Id</th>
            <th>Renk</th>
            <th>Yükseklik </th>
            <th>Genişlik </th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        <tr />
        <tbody id="veri" class="bg-white" style="color : black">
        </tbody>
    </table>
</div>
@* Ekeleme Mödülü *@
<div id="addModal" class="modal" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Yeni Personel Ekleme</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <form id="addForm">
                    <div class="form-group">
                        <label for="renk">Renk :</label>
                        <input type="text" class="form-control" id="renk" name="renk" required>
                    </div>
                    <div class="form-group">
                        <label for="height">Yükseklik :</label>
                        <input type="text" class="form-control" id="height" name="height" required>
                    </div>
                    <div class="form-group">
                        <label for="width">Genişlik :</label>
                        <input type="email" class="form-control" id="width" name="width" required>
                    </div>
                   
                    <div class="form-group">
                        <label for="createddate">Üye Tarihi:</label>
                        <input type="date" class="form-control" id="createddate" name="createddate" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div id="editPersonModal" class="modal" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Kişi Güncelleme</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form id="editPersonForm">
                    <input type="hidden" id="editId" name="id">
                    <div class="form-group">
                        <label for="editrenk">Renk :</label>
                        <input type="text" class="form-control" id="editrenk" name="editrenk" required>
                    </div>
                    <div class="form-group">
                        <label for="editheight">Yükseklik :</label>
                        <input type="text" class="form-control" id="editheight" name="editheight" required>
                    </div>
                    <div class="form-group">
                        <label for="editwidth">Genişlik :</label>
                        <input type="email" class="form-control" id="editwidth" name="editwidth" required>
                    </div>

                    <div class="form-group">
                        <label for="editcreateddate">Üye Tarihi:</label>
                        <input type="date" class="form-control" id="editcreateddate" name="editcreateddate" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="module" src="~/Ajax/ProductFeatures/index.js"></script>


